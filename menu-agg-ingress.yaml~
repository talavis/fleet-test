---
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: menu-aggregator
  namespace: fleet-menu
  annotations:
    kubernetes.io/ingress.class: "nginx"
    cert-manager.io/cluster-issuer: "letsencrypt-issuer"
spec:
  tls:
  - hosts:
    - menu.dckube.scilifelab.se
    - menu.talavis.eu
    secretName: menu-aggregator-tls
  rules:
    - host: menu.dckube.scilifelab.se
      http:
        paths:
          - path: /api/
            backend:
              serviceName: menu-aggregator
              servicePort: 8000
          - path: /
            backend:
              serviceName: menu-aggregator
              servicePort: 80
    - host: menu.talavis.eu
      http:
        paths:
          - path: /api/
            backend:
              serviceName: menu-aggregator
              servicePort: 8000
          - path: /
            backend:
              serviceName: menu-aggregator
              servicePort: 80
